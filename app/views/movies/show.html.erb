<%= @movie.title %>
<%= @movie.creation_year %>
<%= @movie.genre %>
<% @movie.young_to_old.each do |actor| %>
<%= actor.name %>
<% end %>
Actor's Average Age: <%= @movie.average_age %>
<%= form_with url: "/movie/#{@movie.id}", method: :post, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :age %>
<%= f.text_field :age %>
<%= f.submit "Submit" %>
<% end %>
